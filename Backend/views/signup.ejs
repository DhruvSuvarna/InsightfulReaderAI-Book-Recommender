<%- include('./partials/header') -%>
<div class="background"></div>
<main>
<%- include('./partials/navbar') -%>

<!-- Begin Page Content -->
  <div class="signup-container">
    <h2>Signup</h2>
    <form class="signup-form" action="/signup" method="POST">
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        <% if (typeof errmsg1 !== "undefined") { %>
          <p class="error"><%= errmsg1 %></p>
        <% } %>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <% if (typeof errmsg2 !== "undefined") { %>
          <p class="error"><%= errmsg2 %></p>
        <% } %>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <div class="password">
          <input type="password" class="password-field" id="password" name="password" required>
          <i class="fa-solid fa-eye-slash" id="signup-eye"></i>
        </div>
      </div>
      <button type="submit">Signup</button>
    </form>
    <p>Already have an account? <a href="/login">Login here</a></p>
  </div>

</main>
<%- include('./partials/footer') -%> 